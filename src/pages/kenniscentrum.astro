---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import ScrollHeader from '../components/ScrollHeader';
import { Search, Command, TrendingUp, BookOpen, Users, Target, Rocket, Brain, Zap, ArrowRight, Filter } from 'lucide-react';

// Get all pillars and sort by order
const allPillars = await getCollection('pillars');
const sortedPillars = allPillars.sort((a, b) => a.data.order - b.data.order);

// Get all articles for stats
const allArtikelen = await getCollection('artikelen');
const totalArticles = allArtikelen.length;

// Calculate articles per pillar
const pillarStats = sortedPillars.map(pillar => ({
  ...pillar,
  articleCount: allArtikelen.filter(artikel => artikel.data.pillar === pillar.data.pillarId).length
}));

// Featured articles (trending content)
const featuredArtikelen = allArtikelen
  .filter(artikel => artikel.data.featured)
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime())
  .slice(0, 4);

// Recent articles across all pillars  
const recentArtikelen = allArtikelen
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime())
  .slice(0, 3);

const pillarIcons = {
  'ai-automatisering': Zap,
  'custom-ai-saas': Brain,
  'ai-consultancy': Target,
  'autonomous-agents': Users,
  'ai-marketing-sales': TrendingUp,
  'ai-implementation': Rocket
};
---

<Layout 
  title="Kenniscentrum | Premium AI Academy | Buildrs.AI"
  description="Verdiep je in zes kerngebieden waarin wij AI strategisch toepassen. Van automatisering tot SaaS development - complete expertise hub."
  keywords="AI academy, AI expertise, AI implementatie, AI strategie, custom AI development"
>
  <ScrollHeader client:load />

  <main class="bg-black text-white min-h-screen">
    
    <!-- Hero Section - Clean -->
    <section class="pt-32 pb-16 px-6">
      <div class="max-w-6xl mx-auto text-center">
        
        <!-- Main Title -->
        <h1 class="text-4xl md:text-6xl font-semibold mb-6 text-white tracking-tight">
          AI Kenniscentrum
        </h1>
        
        <!-- Subtitle -->
        <p class="text-xl text-gray-300 mb-12 font-normal max-w-3xl mx-auto leading-8">
          Zes strategische expertise gebieden voor AI transformatie
        </p>
        
      </div>
    </section>



    <!-- Clean Pillars Grid -->
    <section class="py-16 px-6">
      <div class="max-w-6xl mx-auto">

        <!-- Simple Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {sortedPillars.map((pillar, index) => {
            const IconComponent = pillarIcons[pillar.data.pillarId];
            const formatDate = () => {
              const dates = ['Jul 10', 'May 20', 'Jun 25', 'Apr 15', 'Mar 8', 'Feb 12'];
              return dates[index % dates.length];
            };
            const isAIAutomatisering = pillar.data.pillarId === 'ai-automatisering';
            const isCustomAISaaS = pillar.data.pillarId === 'custom-ai-saas';
            const isConsultancy = pillar.data.pillarId === 'ai-consultancy';
            const isAutonomousAgents = pillar.data.pillarId === 'autonomous-agents';
            const isAIMarketingSales = pillar.data.pillarId === 'ai-marketing-sales';
            const isAIImplementation = pillar.data.pillarId === 'ai-implementation';
            
            let articleClasses, contentClasses;
            
            if (isAIAutomatisering) {
              articleClasses = 'border-0 bg-gradient-to-r from-blue-500/70 to-purple-600/70 p-[1px] rounded-lg hover:border-gray-700 transition-colors duration-200 h-full';
              contentClasses = 'bg-gradient-to-br from-blue-500/[0.015] via-black to-purple-600/[0.015] rounded-lg p-8 h-full';
            } else if (isCustomAISaaS) {
              articleClasses = 'border-0 bg-gradient-to-r from-purple-500/70 to-pink-600/70 p-[1px] rounded-lg hover:border-gray-700 transition-colors duration-200 h-full';
              contentClasses = 'bg-gradient-to-br from-purple-500/[0.015] via-black to-pink-600/[0.015] rounded-lg p-8 h-full';
            } else if (isConsultancy) {
              articleClasses = 'border-0 bg-gradient-to-r from-cyan-400/70 to-blue-600/70 p-[1px] rounded-lg hover:border-gray-700 transition-colors duration-200 h-full';
              contentClasses = 'bg-gradient-to-br from-cyan-400/[0.015] via-black to-blue-600/[0.015] rounded-lg p-8 h-full';
            } else if (isAutonomousAgents) {
              articleClasses = 'border-0 bg-gradient-to-r from-green-500/70 to-blue-600/70 p-[1px] rounded-lg hover:border-gray-700 transition-colors duration-200 h-full';
              contentClasses = 'bg-gradient-to-br from-green-500/[0.015] via-black to-blue-600/[0.015] rounded-lg p-8 h-full';
            } else if (isAIMarketingSales) {
              articleClasses = 'border-0 bg-gradient-to-r from-red-600/70 to-orange-500/70 p-[1px] rounded-lg hover:border-gray-700 transition-colors duration-200 h-full';
              contentClasses = 'bg-gradient-to-br from-red-600/[0.015] via-black to-orange-500/[0.015] rounded-lg p-8 h-full';
            } else if (isAIImplementation) {
              articleClasses = 'border-0 bg-gradient-to-r from-gray-200/70 via-slate-600/70 to-gray-800/70 p-[1px] rounded-lg hover:border-gray-700 transition-colors duration-200 h-full';
              contentClasses = 'bg-gradient-to-br from-gray-200/[0.015] via-black to-gray-800/[0.015] rounded-lg p-8 h-full';
            } else {
              articleClasses = 'border border-gray-800 rounded-lg hover:border-gray-700 transition-colors duration-200 h-full';
              contentClasses = 'p-8 h-full';
            }
            
            return (
              <a href={`/kenniscentrum/${pillar.data.pillarId}`} class="group block transform transition-transform duration-300 hover:scale-[1.02]" id={pillar.data.pillarId}>
                <article class={articleClasses}>
                  <div class={contentClasses}>
                  
                  <div class="relative z-10">
                  <!-- Date & Icon -->
                  <div class="flex items-center justify-between mb-6">
                    <span class="text-sm text-gray-500">{formatDate()}</span>
                    <div class="w-8 h-8 rounded border border-gray-700 flex items-center justify-center">
                      <IconComponent class="w-4 h-4 text-gray-400" />
                    </div>
                  </div>

                  <!-- Content -->
                  <h3 class="text-xl font-semibold mb-4 text-white group-hover:text-gray-200 transition-colors leading-tight">
                    {pillar.data.title}
                  </h3>

                  <p class="text-gray-300 text-base leading-7 mb-6">
                    {pillar.data.description.substring(0, 140)}...
                  </p>

                  <!-- Read More -->
                  <div class="flex items-center text-gray-400 group-hover:text-white transition-colors">
                    <span class="text-sm font-medium">Lees meer</span>
                    <ArrowRight class="w-4 h-4 ml-2" />
                  </div>
                  </div>
                  
                  </div>
                </article>
              </a>
            );
          })}
        </div>
      </div>
    </section>


    <!-- Trending & Featured Content -->
    <section class="py-20 px-6 border-t border-gray-800">
      <div class="max-w-6xl mx-auto">
        
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-semibold mb-4 text-white">
            Trending Content
          </h2>
          <p class="text-lg text-gray-400 max-w-2xl mx-auto">
            De meest gelezen en gedeelde inzichten uit ons kenniscentrum
          </p>
        </div>

        <!-- Featured Articles Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
          {featuredArtikelen.map((artikel, index) => {
            const formatDate = (date) => {
              return new Date(date).toLocaleDateString('nl-NL', { 
                day: 'numeric', 
                month: 'short' 
              });
            };
            
            const isEven = index % 2 === 0;
            
            return (
              <a href={`/kenniscentrum/${artikel.slug}`} class="group block">
                <article class="border border-gray-800 rounded-lg p-6 h-full hover:border-gray-700 transition-all duration-700 ease-out group-hover:shadow-xl group-hover:shadow-white/5">
                  
                  <!-- Header -->
                  <div class="flex items-center justify-between mb-4">
                    <span class="text-xs text-gray-500 font-medium px-2 py-1 bg-gray-800/50 rounded">
                      {artikel.data.pillar.replace('-', ' ').replace(/\b\w/g, l => l.toUpperCase())}
                    </span>
                    <span class="text-xs text-gray-500">
                      {formatDate(artikel.data.publishDate)}
                    </span>
                  </div>

                  <!-- Content -->
                  <h3 class="text-lg font-semibold mb-3 text-white group-hover:text-gray-200 transition-colors duration-700 ease-out leading-tight line-clamp-2">
                    {artikel.data.title}
                  </h3>

                  <p class="text-gray-300 text-sm leading-6 mb-4 line-clamp-3 group-hover:text-gray-200 transition-colors duration-700 ease-out">
                    {artikel.data.description}
                  </p>

                  <!-- Meta -->
                  <div class="flex items-center justify-between">
                    <div class="flex items-center gap-2">
                      <span class="text-xs text-gray-500 px-2 py-1 bg-gray-800/30 rounded">
                        {artikel.data.readingTime || 5} min
                      </span>
                      <span class="text-xs text-gray-500 px-2 py-1 bg-gray-800/30 rounded">
                        {artikel.data.difficulty === 'beginner' ? 'Basis' : artikel.data.difficulty === 'intermediate' ? 'Gemiddeld' : 'Geavanceerd'}
                      </span>
                    </div>
                    <ArrowRight class="w-4 h-4 text-gray-400 group-hover:text-white group-hover:translate-x-1 transition-all duration-700 ease-out" />
                  </div>
                </article>
              </a>
            );
          })}
        </div>

        <!-- Recent Articles -->
        <div class="border-t border-gray-800 pt-16">
          <h3 class="text-2xl font-semibold mb-8 text-white">
            Nieuwste Publicaties
          </h3>
          
          <div class="space-y-4">
            {recentArtikelen.map((artikel) => {
              const formatDate = (date) => {
                return new Date(date).toLocaleDateString('nl-NL', { 
                  day: 'numeric', 
                  month: 'long',
                  year: 'numeric'
                });
              };
              
              return (
                <a href={`/kenniscentrum/${artikel.slug}`} class="group block">
                  <article class="flex items-center justify-between py-6 border-b border-gray-800/50 hover:border-gray-700 transition-all duration-500 ease-out">
                    
                    <!-- Content -->
                    <div class="flex-1">
                      <div class="flex items-center gap-3 mb-2">
                        <span class="text-xs text-gray-500 font-medium px-2 py-1 bg-gray-800/30 rounded">
                          {artikel.data.pillar.replace('-', ' ').replace(/\b\w/g, l => l.toUpperCase())}
                        </span>
                        <span class="text-xs text-gray-500">
                          {formatDate(artikel.data.publishDate)}
                        </span>
                      </div>
                      
                      <h4 class="text-lg font-medium mb-1 text-white group-hover:text-gray-200 transition-colors duration-500 ease-out">
                        {artikel.data.title}
                      </h4>
                      
                      <p class="text-gray-400 text-sm group-hover:text-gray-300 transition-colors duration-500 ease-out line-clamp-1">
                        {artikel.data.description}
                      </p>
                    </div>

                    <!-- Arrow -->
                    <ArrowRight class="w-5 h-5 text-gray-400 group-hover:text-white group-hover:translate-x-1 transition-all duration-500 ease-out ml-6 flex-shrink-0" />
                  </article>
                </a>
              );
            })}
          </div>
        </div>
      </div>
    </section>

    <!-- Clean CTA -->
    <section class="py-20 px-6 border-t border-gray-800">
      <div class="max-w-4xl mx-auto text-center">
        
        <h2 class="text-3xl font-semibold mb-4 text-white">
          Geen tijd om alles te lezen?
        </h2>
        
        <p class="text-lg text-gray-400 mb-8 max-w-2xl mx-auto">
          Plan een deepdive sessie en we nemen je mee door de frameworks die het meest relevant zijn voor jouw situatie.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a href="/contact" class="px-6 py-3 bg-white text-black font-medium rounded-md hover:bg-gray-200 transition-colors">
            Plan deepdive sessie
          </a>
          <a href="/kenniscentrum/ai-automatisering" class="px-6 py-3 border border-gray-700 text-white rounded-md hover:border-gray-600 transition-colors">
            Start met automatisering
          </a>
        </div>
      </div>
    </section>

  </main>
</Layout>

